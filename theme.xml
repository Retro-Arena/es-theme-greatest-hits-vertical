<theme>
    <formatVersion>4</formatVersion>

	<view name="system">
	
		<image name="background" extra="true">
			<tile>false</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<path>./assets/bg.png</path>
		</image>
		
		<helpsystem name="help">
			<textColor>ffffff</textColor>
			<iconColor>ffffff</iconColor>
			<pos>1 1</pos>
		</helpsystem>	
		
		<image name="logo">
			<path>./art/${system.theme}.png</path>
		</image>
		
				
	    <text name="systemInfo">
         <pos>0.002 0.897</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>000000</color>
         <fontPath>./_inc/fonts/wii.ttf</fontPath>
	     <fontSize>0.02</fontSize>
      </text>

		
	</view>

	<view name="basic, detailed, video">
		
		<text name="md_lbl_releasedate, md_lbl_developer, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount">
			<color>2f2f2f</color>
			<forceUppercase>0</forceUppercase>
			<fontPath>./assets/wii.ttf</fontPath>
			<fontSize>0.028</fontSize>
		</text>

		<text name="md_developer, md_genre, md_players, md_playcount, md_releasedate">
			<color>2f2f2f</color>
			<forceUppercase>0</forceUppercase>
			<fontPath>./assets/wii.ttf</fontPath>
			<fontSize>0.028</fontSize>
		</text>

		<helpsystem name="help">
			<textColor>ffffffff</textColor>
			<iconColor>ffffffff</iconColor>
			<pos>1 1</pos>
		</helpsystem>
		
		<image name="logo">
			<color>00000000</color>
			<path>./assets/box.png</path>
			<pos>1 1</pos>
		</image>
		
		<image name="background" extra="true">
			<tile>false</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<path>./assets/systembg.png</path>
		</image>
		

		
	</view>

	<view name="basic">

		<image name="background">
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<path>./assets/systembg.png</path>
		</image>
		
		<textlist name="gamelist">
			<selectedColor>000000</selectedColor>
			<primaryColor>ffffff</primaryColor>
			<secondaryColor>e70c32</secondaryColor>
			<selectorColor>ffffff</selectorColor>
			<fontPath>./assets/wii.ttf</fontPath>
			<fontSize>0.028</fontSize>
			<pos>0.032 0.275</pos>
			<size>0.430 0.300</size>
			<alignment>left</alignment>
			<horizontalMargin>0.01</horizontalMargin>
			<lineSpacing>1.3</lineSpacing>
			<scrollSound>./assets/Move.wav</scrollSound>
		</textlist>	

	</view>
	

	<view name="detailed">
		
