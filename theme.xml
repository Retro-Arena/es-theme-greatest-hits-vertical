			<maxSize>0.298 0.108</maxSize>
	  </image>
		<image name="md_image">
			<pos>0.312 0.187</pos>
			<maxSize>0.277 0.365</maxSize>
			<origin>0 0</origin>
		</image>
	
	</view>
	
	<view name="detailed, video">	
		
